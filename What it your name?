name = input(str("What is your name?"))

if name == str("Wally"):
  print("Hello " + name + " :)")
  
if name == str("Maria"):
  print("Hello " + name + " :)")

if name == str("Amar"):
  print("Hello " + name + " :)")
  print ("I like your shoes")

if name == str("Brandy"):
  print("Hello " + name + " :)")
  print ("You seem like a cool person")

else:
    print("Hello " + name)
    
